rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access for admin credentials check
    match /admin/{docId} {
      allow read: if true;
      allow write: if false; // Should be managed via Admin SDK or Console
    }
    
    // Allow read/write for other collections for now
    // TODO: Add role-based security rules
    match /users/{userId} {
      allow read, write: if true;
    }

    match /classes/{classId} {
      allow read, write: if true;
    }

    match /announcements/{announcementId} {
      allow read, write: if true;
    }

    match /fees/{feeId} {
      allow read, write: if true;
    }
  }
}
